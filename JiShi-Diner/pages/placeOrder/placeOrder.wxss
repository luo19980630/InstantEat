.OrderDetail
{
  color: white;
  position: fixed;
  top: 1%;
  width: 92%;
  height: 260rpx;
  box-shadow: 0px 0px 2.5px 1px #FAFAFA;
  border-radius: 1%;
  background-color: #E1F5FE;
  z-index: 999;
}
.OrderDetailText
{
  position: absolute;
  top: 10rpx;
  left: 3%;
  font-weight: 400;
  font-size: 50rpx;
  color: white;
}
.OrderNumText
{
  position: relative;
  top: 85rpx;
  left: 3%;
  font-weight: 350;
  font-size: 36rpx;
  color: black;
}
.EmptyCart
{
  position: absolute;
  top: 16rpx;
  right: 3%;
  height: 80rpx;
  width: 90rpx;
}
.OrderContentFather
{
  position: absolute;
  width: 92%;
  top: 280rpx;
}
.OrderContent
{
  position: relative;
  margin-bottom: 2%;
  width: 100%;
}
.OrderContentType
{
  margin-left: 3%;
  width: 65rpx;
  height: 30rpx;
  font-size: 30rpx;
  font-weight: 430;
  border-bottom: 4px solid #29B6F6;
  border-radius: 0px;  
  background-color: white;
  text-align: center;
}
.OrderContentName
{
  margin-left: 3%;
  font-size: 35rpx;
}
.OrderContentTOTPrice
{
  position: absolute;
  right: 3%;
  font-size: 35rpx;
}
.OrderContentPrice
{  
  margin-top: -2%;
  margin-left: 3%;
  font-size: 30rpx;
  color: #E53935;
}

.order
{
  position: fixed;
  bottom: 20rpx;
  width: 92%;
  height: 80rpx;
  background-color: #ECEFF1;
  box-shadow: 0px 0px 1px 0.5px #ECEFF1;
  border-radius: 1%; 
  display: flex;
}
.currentTOTPriceImg
{
  position: absolute;
  left: 5%;
  bottom: 15rpx;
  height: 110rpx;
  width: 120rpx;
}
.currentTOTPrice
{
  color: black;
  font-size: 40rpx;
  font-weight: 400;
  position: absolute;
  left: 21%;
  align-self: center;
}
.orderNow
{
  color: #29B6F6;
  font-size: 35rpx;
  font-weight: 500;
  margin-left: 75%;
  display: inline-block;
  align-self: center;
}
.currentTOTAmountText
{
  color: white;
  font-size: 30rpx;
  vertical-align: middle;
}